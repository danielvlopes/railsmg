.box
  %h2 Cadastro

  - semantic_form_for @user do |f|
    - f.inputs do
      = f.input :name
      = f.input :email
      = f.input :permalink
      = f.input :city
      = f.input :password
      = f.input :password_confirmation

    - f.buttons do
      = f.commit_button 'Cadastrar'

:javascript
  document.getElementById('user_name').focus();